package users

import (
	"encoding/json"
	"errors"
	"net/http"
	"shp/pkg/api"

	"github.com/go-chi/chi/v5"
	"go.uber.org/zap"
)

type controller struct {
	srv Srv
	log *zap.Logger
}

// NewController creates a new user controller.
func NewController(srv Srv, log *zap.Logger) *controller {
	return &controller{
		srv: srv,
		log: log,
	}
}

// SetupRoutes registers all user router routes.
func (c *controller) SetupRoutes(m *chi.Mux) {
	m.Post("/signin", api.HandleError(c.log, c.SignIn))
}

// SingIn is a http controller that creates a new account.
func (c *controller) SignIn(w http.ResponseWriter, r *http.Request) error {
	ctx := r.Context()
	var params *UserCreateParams

	if err := json.NewDecoder(r.Body).Decode(&params); err != nil {
	}

	u, err := c.srv.SignIn(ctx, params)
	if errors.Is(err, ErrEmailTaken) {
		return api.HttpError{
			Err:    err,
			Status: http.StatusBadRequest,
			Msg:    "Email adress is already taken",
		}
	} else if err != nil {
		return err
	}

	res, err := json.Marshal(u)
	if err != nil {
		return err
	}

	w.Header().Set("Content-Type", "application/json")
	w.Write(res)
	return nil
}
